/**index.wxss**/
.container{
  width: 100%;
  position: relative;
  padding: 0;
}
.home-banner,.home-swiper,.home-img{
  width: 100%;
  height: 400rpx;
}

.home-list{
  width: 100%;
}

/* 列表列 */
.list{
  display: flex;
  flex-direction:column;
  width: 100%;
  border-bottom: 15rpx solid rgba(204, 204, 204, 0.3);
}

/* 列表行 */
.list-row{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.list-name,.list-time{
    margin:20rpx;
    font-size: 30rpx;
    color: #999999;
}

.list-time{
   position: absolute;
   right: 20rpx;
   font-size: 20rpx;
}

.list-image{
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}

.list-content{
  margin-left: 20rpx;
  font-size: 16px;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-chapterName{
   margin: 20rpx;
   font-size: 25rpx;
   color: #999999;
}

.list-collection{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  margin: 20rpx;
  right: 30rpx;
}






