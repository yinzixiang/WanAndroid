.caregory{
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    height: 100%;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    width: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }
.nav-left{
    width: 30%;
    border-right: 4rpx solid rgba(204, 204, 204, 0.5);
    overflow-y: auto
}

.nav-left-items{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 30rpx;    
    white-space: nowrap;
}

.active{
    color: red;
    font-weight: bold;
    font-size: 32rpx;
}

.nav-right{
    width: 70%;
    overflow-y: auto
}

.nav-right-title{
    margin: 20rpx;
    font-size: 30rpx;    
    font-weight: bold;
}

.nav-right-items{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    overflow: hidden;
    padding: 20rpx 20rpx 0;
    overflow-y: scroll;
}
.items-title{
    margin-left: 50rpx;
    margin-top: 40rpx;
    font-size: 32rpx;

}