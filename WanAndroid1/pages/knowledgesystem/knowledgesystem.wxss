.container{
    margin: 0;
    padding: 0;
}
.knowledgesystem{
    width: 100%;
    display: flex;
    flex-direction: column;
}

.knowledgesystem-list{
    display: flex;
    flex-direction: row;
    width: 100%;    
    border-bottom: 6px solid rgba(204, 204, 204, 0.3);
    
}
.list-left{
   width: 80%;
 
}

.list-title{
    margin: 20rpx;
    font-size: 20px;
  
}


.list-children{
    display: flex;
    flex-flow: row wrap;
    margin: 20rpx;
    font-size: 14px;
}
.children-name{
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    border:1px solid #cccccc;

}

.list-right{
    display: flex;
    flex-direction: row;
    width: 18%;

}
.konwledge-image{
    margin-left: 40rpx;
    align-self: center;
    width: 30rpx;
    height: 30rpx;
}