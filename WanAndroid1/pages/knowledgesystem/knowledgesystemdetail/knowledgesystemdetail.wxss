.container{
    padding: 0;
  margin: 0;
}

.nav{
    width: 100%;
    height: 80rpx;
    background: #f7f7f7;
    /* overflow: hidden; */
    line-height: 80rpx;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0px;
    left: 0px;
    display: flex;
    flex-direction: row;
    font-size: 14px;
    z-index: 150;
    border-bottom: 2px solid #276692
}
.nav-item{
    display: inline;
    text-align: center;
    margin-left: 30rpx;
    margin-right: 15rpx;
    width: 150rpx;
    white-space: nowrap;

}
.active{
    color: #276692;
    font-size: 18px;
    font-weight: bold;
}

.item-box{
    margin-top: 90rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.item-list{
    border-bottom: 15rpx solid rgba(204, 204, 204, 0.3);
}
.item-row{
    display: flex;
    flex-direction: row;
    
}
.author,.time,.chapter-name{
    margin: 20rpx;
    font-size: 14px;
    color:  #999999;
}
.time{
    position: absolute;
    right: 20rpx;
}
.title{
    margin: 20rpx;
    font-size: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
















